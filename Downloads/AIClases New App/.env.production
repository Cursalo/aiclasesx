# AIClases 4.0 - Production Environment Variables
# Copy this to your Vercel environment variables dashboard

# App Configuration
NEXT_PUBLIC_APP_URL=https://aiclases.com
NEXT_PUBLIC_APP_NAME="AIClases 4.0"
NODE_ENV=production

# Database
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Authentication
NEXTAUTH_URL=https://aiclases.com
NEXTAUTH_SECRET=your_nextauth_secret_at_least_32_characters

# Social Authentication
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GITHUB_CLIENT_ID=your_github_oauth_app_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Email Configuration
EMAIL_SERVER_HOST=smtp.resend.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=resend
EMAIL_SERVER_PASSWORD=your_resend_api_key
EMAIL_FROM=noreply@aiclases.com

# Payment Processing
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# MercadoPago (LATAM)
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key
MERCADOPAGO_WEBHOOK_SECRET=your_mercadopago_webhook_secret

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_api_key

# MCP & AI Services
CONTEXT7_API_KEY=your_context7_api_key
CONTEXT7_LIBRARY_ID=/aiclases/documentation
OPENAI_API_KEY=your_openai_api_key

# Monitoring & Error Tracking
SENTRY_DSN=https://your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=aiclases-web

# CDN & Storage
NEXT_PUBLIC_CDN_URL=https://cdn.aiclases.com
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=aiclases-production

# Security
ENCRYPTION_KEY=your_32_character_encryption_key
JWT_SECRET=your_jwt_secret_key

# Features Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_COMMUNITY=true

# Rate Limiting
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# SEO & Domain Verification
GOOGLE_VERIFICATION=your_google_search_console_verification
BING_VERIFICATION=your_bing_webmaster_verification

# WebRTC (for video calls)
NEXT_PUBLIC_TURN_SERVER_URL=turn:your.turn.server:3478
TURN_SERVER_USERNAME=your_turn_username
TURN_SERVER_CREDENTIAL=your_turn_credential